# Framework B - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_RATE_LIMIT=3000
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3

# ============================================
# Anthropic Claude Configuration
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TIMEOUT=30000
ANTHROPIC_MAX_RETRIES=3

# ============================================
# Google Gemini Configuration (Optional)
# ============================================
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_DEFAULT_MODEL=gemini-1.5-pro
GOOGLE_AI_TIMEOUT=30000
GOOGLE_AI_MAX_RETRIES=3

# ============================================
# Pinecone Configuration
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=goldarch-docs
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine
PINECONE_POD_TYPE=p1.x1
PINECONE_REPLICAS=1
PINECONE_SHARDS=1

# Pinecone Namespaces
PINECONE_NAMESPACE_PROJECTS=project-docs
PINECONE_NAMESPACE_SUPPLIERS=supplier-docs
PINECONE_NAMESPACE_QUOTES=quote-docs
PINECONE_NAMESPACE_ACTIVITIES=activity-docs
PINECONE_NAMESPACE_DEALS=deal-docs
PINECONE_NAMESPACE_GENERAL=general-docs

# ============================================
# Embeddings Configuration
# ============================================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_TYPE=memory
EMBEDDING_CACHE_TTL=86400
EMBEDDING_CACHE_MAX_SIZE=10000
EMBEDDING_RETRY_ATTEMPTS=3
EMBEDDING_RETRY_DELAY=1000

# ============================================
# RAG Configuration
# ============================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

RAG_RETRIEVAL_TOP_K=5
RAG_CONTEXT_WINDOW=4000
RAG_INCLUDE_CITATIONS=true
RAG_FALLBACK_MESSAGE="I don't have enough information to answer that question."
RAG_ENABLE_HISTORY=true
RAG_MAX_HISTORY_LENGTH=10

# ============================================
# n8n Configuration (Optional)
# ============================================
N8N_ENABLED=false
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# n8n Webhook URLs
N8N_WEBHOOK_DOCUMENT_INGESTION=https://your-n8n-instance.com/webhook/document-ingestion
N8N_WEBHOOK_CHATBOT_QA=https://your-n8n-instance.com/webhook/chatbot-qa
N8N_WEBHOOK_DOCUMENT_ANALYSIS=https://your-n8n-instance.com/webhook/document-analysis

# ============================================
# Document Processing Configuration
# ============================================
DOC_PROCESSOR_CHUNK_SIZE=1000
DOC_PROCESSOR_CHUNK_OVERLAP=200
DOC_PROCESSOR_CHUNK_STRATEGY=recursive
DOC_PROCESSOR_MAX_FILE_SIZE=10485760
DOC_PROCESSOR_PRESERVE_FORMATTING=true
DOC_PROCESSOR_MIN_CHUNK_SIZE=50
DOC_PROCESSOR_MAX_CHUNK_SIZE=2000
